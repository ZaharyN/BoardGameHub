@{
	ViewData["Title"] = "Admin Homepage";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="btn-group d-flex justify-content-center" role="group">
                <a asp-area="" asp-controller="Boardgame" asp-action="Active" class="btn btn-primary btn-sm mb-2 w-25 fw-bold rounded btn-dark-text">Boardgames</a>
                <a asp-area="" asp-controller="Category" asp-action="All" class="btn btn-primary btn-sm mb-2 w-25 fw-bold rounded btn-dark-text">Categories</a>
                <a asp-area="Admin" asp-controller="Reservation" asp-action="All" class="btn btn-primary btn-sm mb-2 w-25 fw-bold rounded btn-dark-text">All reservations</a>
                <a asp-area="Admin" asp-controller="Reservation" asp-action="Expired" class="btn btn-primary btn-sm mb-2 w-25 fw-bold rounded btn-dark-text">Free tables</a>
            </div>
        </div>
    </div>
</div>