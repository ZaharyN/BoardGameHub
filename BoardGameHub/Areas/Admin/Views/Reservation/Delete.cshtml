@model ReservationDeleteFormModel

@{
	ViewData["Title"] = "Delete reservation";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.ReservationName</h3>
                <p class="mb-0"><strong>Reservation date:</strong> @Model.DateTime</p>
                <p class="text-danger mt-3">"Are you sure you want to delete this seminar?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-area="Admin" asp-controller="Reservation" asp-action="All" class="btn btn-warning"> Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>