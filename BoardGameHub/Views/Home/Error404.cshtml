@{
	ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 error-container">
            <h1 class="error-heading">404</h1>
            <p class="error-message">Oops! Page not found.</p>
            <img src="/assets/Errors/Error_404.png" alt="404 Error" class="error-image">
            <p class="mt-3">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
            <a href="/" class="btn btn-primary mt-3">Go to Home</a>
        </div>
    </div>
</div>