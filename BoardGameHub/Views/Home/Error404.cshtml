@{
	ViewData["Title"] = "Error";
}

<div class="container" style="text-align: center;">
    <div class="row">
        <div class="col-lg-12 error-container">
            <h1 class="error-message">Oops! Page not found.</h1>
            <img src="/assets/Errors/Error_404.png" alt="404 Error" class="error-image">
            <p class="mt-3">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
            Go back to <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary p-3 mb-2">Home</a> 
        </div>
    </div>
</div>